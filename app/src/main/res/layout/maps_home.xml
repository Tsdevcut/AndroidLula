<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="www.tsdevcut.co.za.luladrivedemo2.MapsHome"
    >

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


    <ImageButton
        android:padding="5dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/backbut"
        android:scaleType="fitCenter"
        android:textColor="#fff"
        android:textSize="30dp"
        android:background="@color/colorPrimary"
        android:id="@+id/buttonBack"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:background="@color/whites"
        android:id="@+id/layoutDriverIcon"
        android:orientation="vertical"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/buttonBack"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/buttonBack">

        <ImageButton
            android:background="@color/whites"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/imageButtonViewDriver"
            android:src="@drawable/taxmybook"
            android:scaleType="fitCenter"
            android:onClick="onClickViewDriver"
            />
    </LinearLayout>
</RelativeLayout>
